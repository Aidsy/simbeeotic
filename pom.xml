<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <!-- name, version specifics -->
    <modelVersion>4.0.0</modelVersion>

    <groupId>harvard.robobees</groupId>
    <artifactId>robobees-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.1.0-SNAPSHOT</version>

    <organization>
        <name>Harvard University RoboBees Project</name>
        <url>http://hive.seas.harvard.edu</url>
    </organization>

    <!-- todo: change this once we have a managed repo -->
    <repositories>
        <repository>
            <id>hive</id>
            <name>RoboBees Maven Repository</name>
            <url>http://http://hive.seas.harvard.edu/svn/main/mavenrepo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>hive-snapshots</id>
            <name>RoboBees Maven Snapshots Repository</name>
            <url>http://http://hive.seas.harvard.edu/svn/main/mavenrepo-snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- todo: fix this once we have a real maven repo -->
    <distributionManagement>
        <repository>
            <id>hive</id>
            <name>RoboBees Maven Repository</name>
            <!-- release from a tagged version -->
            <url>file://${basedir}/../../../../mavenrepo</url>
        </repository>
        <snapshotRepository>
            <id>hive-snapshot</id>
            <name>RoboBees Maven Snapshot Repository</name>
            <!-- release from the trunk -->
            <url>file://${basedir}/../../../mavenrepo-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

</project>

