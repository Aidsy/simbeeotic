<?xml version="1.0"?>

<world xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://harvard/robobees/simbeeotic/configuration/world"
       xsi:schemaLocation="http://harvard/robobees/simbeeotic/configuration/world http://some/path/to/schema.xsd">

    <radius>2000</radius>

    <obstacles>
        <obstacle>
            <box length="2" width="3">
                <position x="10" y="10"/>
            </box>
            <meta>
                <prop name="foo" value="bar"/>
            </meta>
        </obstacle>
        <obstacle>
            <box>
                <position x="-5" y="8"/>
            </box>
            <color red="192" green="65" blue="23" alpha="64"/>
        </obstacle>
        <obstacle>
            <box height="4">
                <position x="3" y="-20"/>
            </box>
            <texture>
                <classpath path="/textures/brick_2.jpg"/>
            </texture>
        </obstacle>
    </obstacles>

    <flowers>
        <patch>
            <center x="3" y="-2"/>
            <radius>12</radius>
            <density>0.5</density>
            <meta>
                <prop name="pollen" value="2"/>
            </meta>
        </patch>
    </flowers>
</world>