<?xml version="1.0"?>

<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://harvard/robobees/simbeeotic/configuration/scenario"
          xsi:schemaLocation="http://harvard/robobees/simbeeotic/configuration/scenario http://some/path/to/schema.xsd">

    <master-seed>
        <constant value="112181"/>
    </master-seed>

    <simulation>
        <step>0.1</step>
        <end-time>200.0</end-time>
    </simulation>

    <comms>
        <propagation-model>
            <java-class>harvard.robobees.simbeeotic.comms.DefaultPropagationModel</java-class>
            <properties>
                <prop name="snr-margin" value="7"/>
                <prop name="noise-floor-mean" value="0.012"/>
                <prop name="noise-floor-sigma" value="0.007"/>
            </properties>
        </propagation-model>
    </comms>

    <colony>
        <hive>
            <generic-hive>
                <logic>
                    <java-class>harvard.robobees.simbeeotic.model.InertHive</java-class>
                </logic>
            </generic-hive>
            <position x="0" y="0" z="0" />
        </hive>
        <bee-group>
            <generic-bee>
                <logic>
                    <java-class>harvard.robobees.simbeeotic.example.BroadcastBee</java-class>
                </logic>
                <radio>
                    <java-class>harvard.robobees.simbeeotic.comms.DefaultRadio</java-class>
                    <properties>
                        <prop name="max-power" value="60"/>
                    </properties>
                </radio>
            </generic-bee>
            <count>3</count>
        </bee-group>
    </colony>

    <looping repetitions="1"/>
</scenario>