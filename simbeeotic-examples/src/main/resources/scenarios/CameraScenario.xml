<?xml version="1.0"?>

<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://harvard/robobees/simbeeotic/configuration/scenario"
          xsi:schemaLocation="http://harvard/robobees/simbeeotic/configuration/scenario http://some/path/to/schema.xsd">

    <master-seed>
        <constant value="111982"/>
    </master-seed>

    <simulation>
        <end-time>200.0</end-time>
    </simulation>

    <models>
        <model>
            <java-class>harvard.robobees.simbeeotic.example.CameraBee</java-class>
            <start-position x="0" y="0" z="20"/>
            <sensor name="camera">
                <java-class>harvard.robobees.simbeeotic.model.sensor.DefaultCameraSensor</java-class>
                <properties>
                    <prop name="width" value="400"/>
                    <prop name="height" value="400"/>
                    <prop name="length" value="100"/>
                    <prop name="rotx" value="0"/>
                    <prop name="roty" value="0"/>
                    <prop name="rotz" value="0"/>
                    <prop name="offx" value="0"/>
                    <prop name="offy" value="0"/>
                    <prop name="offz" value="-0.2"/>
                </properties>
            </sensor>
        </model>
    </models>
    <components>
        <variation>
            <java-class>harvard.robobees.simbeeotic.component.VisComponent3D</java-class>
        </variation>
    </components>
</scenario>